<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.CommunityFragment"
    android:layout_marginTop="66dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:fontFamily="@font/fontstyle"
                        android:id="@+id/tx_bestPose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_layout"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="이번주 최고의 자세"
                        android:textSize="35dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:id="@+id/imageFilterView"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_launcher_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tx_bestPose" />

                    <TextView
                        android:id="@+id/tx_userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="userName"
                        android:textSize="30sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/fontstyle"
                        app:layout_constraintStart_toEndOf="@+id/imageFilterView"
                        app:layout_constraintTop_toTopOf="@+id/imageFilterView" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="150dp"
                        android:layout_height="2dp"
                        android:background="#41EAA0"
                        app:layout_constraintStart_toStartOf="@+id/tx_userName"
                        app:layout_constraintTop_toTopOf="@+id/exPart" />

                    <TextView
                        android:id="@+id/exPart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="최고의 운동 부위"
                        android:textSize="30sp"
                        android:fontFamily="@font/fontstyle"
                        app:layout_constraintBottom_toBottomOf="@+id/imageFilterView"
                        app:layout_constraintStart_toEndOf="@+id/imageFilterView" />

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="2dp"
                        android:background="#41EAA0"
                        app:layout_constraintStart_toStartOf="@+id/exPart"
                        app:layout_constraintTop_toBottomOf="@+id/exPart" />

                    <TextView
                        android:id="@+id/tx_weekendBest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/custom_layout"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="이번주 나의 운동"
                        android:textSize="35dp"
                        android:fontFamily="@font/fontstyle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageFilterView" />

                    <!--                    weekend 1-->

                    <TextView
                        android:fontFamily="@font/fontstyle"
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:text="1"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tx_weekendBest" />

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:id="@+id/img_weekend1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_launcher_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView" />

                    <TextView
                        android:id="@+id/tx_weekend1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="최고의 운동 부위   yymmdd"
                        android:textSize="20sp"
                        android:fontFamily="@font/fontstyle"
                        app:layout_constraintStart_toEndOf="@+id/img_weekend1"
                        app:layout_constraintTop_toTopOf="@+id/img_weekend1" />
                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="2dp"
                        android:background="#41EAA0"
                        app:layout_constraintStart_toStartOf="@+id/tx_weekend1"
                        app:layout_constraintTop_toBottomOf="@+id/tx_weekend1" />

                    <!--                    weekend 2-->
                    <TextView
                        android:fontFamily="@font/fontstyle"
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:text="2"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView" />

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:id="@+id/img_weekend2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_launcher_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView2" />

                    <TextView
                        android:id="@+id/tx_weekend2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="최고의 운동 부위   yymmdd"
                        android:textSize="20sp"
                        android:fontFamily="@font/fontstyle"
                        app:layout_constraintStart_toEndOf="@+id/img_weekend2"
                        app:layout_constraintTop_toTopOf="@+id/img_weekend2" />
                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="2dp"
                        android:background="#41EAA0"
                        app:layout_constraintStart_toStartOf="@+id/tx_weekend2"
                        app:layout_constraintTop_toBottomOf="@+id/tx_weekend2" />

                    <!--                    weekend 3-->

                    <TextView
                        android:fontFamily="@font/fontstyle"
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:text="3"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:id="@+id/img_weekend4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_launcher_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView4" />

                    <TextView
                        android:id="@+id/tx_weekend4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="최고의 운동 부위   yymmdd"
                        android:textSize="20sp"
                        android:fontFamily="@font/fontstyle"
                        app:layout_constraintStart_toEndOf="@+id/img_weekend4"
                        app:layout_constraintTop_toTopOf="@+id/img_weekend4" />
                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="2dp"
                        android:background="#41EAA0"
                        app:layout_constraintStart_toStartOf="@+id/tx_weekend4"
                        app:layout_constraintTop_toBottomOf="@+id/tx_weekend4" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>